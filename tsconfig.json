{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es2017",
    "module": "commonjs",
		"outDir": "dist",
    "noImplicitAny" : true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "inlineSourceMap": true
	},
	"include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
